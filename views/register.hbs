            <div class="mt-4 py-4 px-4 col-5 bg-dark shadow mx-auto" style="margin: 20px;">
                <div class="form-group">
                    <div style="display: flex;">
                        <img id="register-profile-preview" class="avatar avatar-big me-4" src="img/avatar/guest.png">
                        <div style="align-self: center;">
                            <input type="file" autocomplete="off" class="form-control" name="avatar" id="register-profile-input" accept="image/*">
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="username" class="register-label">Username</label>
                    <input name="username" type="text" id="username" placeholder="Froggers" class="register-input bg-dark" required>
                </div>

                <div class="form-group">
                    <label class="register-label" for="register-description">Description</label>
                    <textarea name="description" class="form-control" id="register-description" rows="8" cols="80"
                        placeholder="Description" autocomplete="off"></textarea>
                </div>
            </div>

            <div class="mt-4 py-4 px-4 col-5 bg-dark shadow mx-auto" style="margin: 20px;">
                <div class="form-group">
                    <label for="email" class="register-label">Email</label>
                    <input name="email" type="email" id="email" placeholder="frog@mail.com" class="register-input bg-dark" required>
                </div>

                <div class="form-group">
                    <label for="password" class="register-label">Password</label>
                    <input name="password" type="password" id="password" placeholder="Value" class="register-input bg-dark" required>
                </div>

                <div class="form-group">
                    <label for="conf-password" class="register-label">Confirm Password</label>
                    <input name="conf_password" type="password" id="conf-password" placeholder="Value"
                        class="register-input bg-dark" required>
                </div>

                <div class="checkbox-container">
                    <input name="terms" type="checkbox" id="terms">
                    <label for="terms" style="margin-left: 10px">I agree to the terms and conditions</label>
                </div>
                <a class="terms" href="#terms-conditions" data-bs-toggle="modal" data-bs-target="#terms-conditions">Terms
                    and Conditions</a>
                <button type="submit" class="register-btn">Register</button>
            </div>
        </form>

