<div id="game-info-container" class="bg-game" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5),
    rgb(31, 25, 38)), url('/img/back/{{game.file}}.png');">

    <div class="container d-flex flex-wrap flex-lg-nowrap pt-5 pb-5">
        <img id="game-cover" class="individual-game-cover" src="img/cover/{{game.file}}.png" alt="{{game.title}}">
        <div class="game-description col-lg-6">
            <h1 id="game-title" class="fw-bold allow-editing">{{game.title}}</h1>
            <p id="game-developer-date" class="fst-italic">
                <span id="game-developer" class="allow-editing">{{game.developer}}</span>,
                <span id="game-release-date" class="allow-editing">{{game.release_date}}</span>
            </p>
            <div id="star-rating" class="star-rating">
                {{{generateStarRating game.rating false}}}
            </div>
            <div id="game-description-text" class="allow-editing w-100">
                {{game.description}}
            </div>
            <p class="fst-italic">
                Source:
                <a class="block-link allow-editing" href="{{game.source.link}}">
                    {{game.source.name}}
                </a>
            </p>
            <div class="leave-rating">
                <h2 class="fw-bold fs-2">Have you played this game before?</h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#leave-review">Leave a
                    review</button>
            </div>
            <div class="my-2">
                <button id="edit-button" class="btn btn-primary" onclick="toggleEdit()">
                    Edit
                </button>
                <button id="change-boxart-button" class="btn btn-primary" onclick="uploadFile()">
                    Change boxart
                </button>
                <button id="change-wallpaper-button" class="btn btn-primary" onclick="uploadFile()">
                    Change wallpaper
                </button>
                <button id="delete-button" class="btn btn-danger" disabled>
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="fw-bold">Top reviews</h2>
    <div class="d-flex flex-wrap">
        {{log}}
        {{log "##" game.title}}
        {{log}}
        {{#if reviews}}
        {{#each reviews}}
        {{> review-entry review=this user=(findUser username)}}
        {{/each}}
        {{else}}
        <p class="bg-dark shadow py-4 px-4">There are no reviews for this game!</p>
        {{/if}}
    </div>
</div>

<div class="modal modal-lg fade" id="leave-review">
    <div class="modal-dialog">
        <div class="modal-content bg-dark shadow">
            <div class="modal-header">
                <h5>Leave a Review</h5>
            </div>
            <div class="modal-body">
                <form id="leave-review-form" action="/submit-review" method="post">
                    <div class="form-group mb-3">
                        <label for="leave-review-rating">Rating</label>
                        <div id="leave-review-rating" class="star-rating-allow-editing">
                            {{{generateStarRating -1 true}}}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="leave-review-title">Title</label>
                        <input name="title" class="form-control" type="text" id="leave-review-title" placeholder="Title">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="leave-review-description">Description</label>
                        <textarea name="text" class="form-control" id="leave-review-description" rows="8" cols="120"
                            placeholder="Description"></textarea>
                    </div>

                <input type="hidden" name="game" id="leave-review-game" value="{{game.title}}">

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="submit-review" class="btn btn-primary" data-bs-dismiss="modal">Post</button>
            </div>
        </div>
    </div>
</div>