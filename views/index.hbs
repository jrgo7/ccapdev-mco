<div class="container">
    <img class="logo center py-5" src=img/FrogCritic.png alt="FrogCritic">
    <div class="search-box input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">ðŸ”Ž</span>
        </div>
        <input id="search-text" type="text" class="form-control" placeholder="Super Mario Bros." oninput="filterGames()"
            autocomplete="off">
        <div class="input-group-append">
            <div class="input-group">
                <span class="input-group-text">where Average Rating â‰¥</span>
                <select id="filter-select" class="form-select" onchange="filterGames()">
                    <option selected value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="input-group-append">
            <div class="input-group">
                <span class="input-group-text">Order by</span>
                <select id="order-type-select" class="form-select" onchange="sortGames()">
                    <option selected value="1">Average Rating</option>
                    <option value="2">Title</option>
                    <option value="3">Developer</option>
                    <option value="4">Release Date</option>
                    <option value="5">Review Count</option>
                </select>
            </div>
        </div>
        <div class="input-group-append">
            <div class="input-group">
                <select id="order-arrangement-select" class="form-select" onchange="sortGames()">
                    <option selected value="1">Ascending</option>
                    <option value="2">Descending</option>
                </select>
            </div>
        </div>
    </div>
    <div class="px-2 py-2 input-group-append w-100 text-center">
        <a href="https://forms.gle/Dkj8X19CBv2FWL7r5" target="new" class="block-link">
            ...or recommend a game!
            <span class="fa-solid fa-gamepad fa-xl clickable"></span>
        </a>
    </div>
    <div id="game-entries" class="container mx-auto d-flex flex-wrap">
