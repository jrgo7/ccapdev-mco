<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>FrogCritic</title>
</head>

<body class="bg-dark">

    <!-- Login Modal -->

    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-dark">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginLabel">Login</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group py-2">
                            <label for="input-email">Email address</label>
                            <input type="email" class="form-control" id="input-email" aria-describedby="emailHelp"
                                placeholder="Enter your email">
                        </div>
                        <div class="form-group py-2">
                            <label for="password1">Password</label>
                            <input type="password" class="form-control" id="password1" placeholder="Password">
                        </div>
                        <div class="form-check py-2">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Remember?</label>
                        </div>
                        <hr>
                        <div class="float-end">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Register Modal -->

    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="registerLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-dark">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerLabel">Register</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group py-2">
                            <label for="input-email">Email address</label>
                            <input type="email" class="form-control" id="input-email" aria-describedby="emailHelp"
                                placeholder="Enter your email">
                        </div>

                        <div class="form-group py-2">
                            <label for="input-username">Username</label>
                            <input type="email" class="form-control" id="input-username" aria-describedby="username"
                                placeholder="Enter a username">
                        </div>

                        <div class="form-group py-2">
                            <label for="password1">Password</label>
                            <input type="password" class="form-control" id="password1" placeholder="Password">
                        </div>

                        <div class="form-group py-2">
                            <label for="password2">Confirm Password</label>
                            <input type="password" class="form-control" id="password2" placeholder="Password">
                        </div>

                        <div class="form-group py-2">
                            <label for="register-description">Enter a short description! (Optional)</label>
                            <textarea class="form-control" id="register-description" rows="2"></textarea>
                        </div>

                        <div class="form-group py-2">
                            <label for="avatar-file-register">Enter an avatar!</label>
                            <input type="file" class="form-content-file" id="avatar-file-register">
                        </div>

                        <hr>
                        <div class="float-end">
                            <button type="submit" class="btn btn-primary">Register!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark px-5" style="background-color: var(--primary)">
        <a class="navbar-brand ff-doto px-3 " href="/">FrogCritic</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item mx-3">
                    <a class="nav-link" aria-current="page" href="#">Games</a>
                </li>
                <li class="nav-item mx-3">
                    <a class="nav-link" aria-current="page" href="users">Users</a>
                </li>
            </ul>
            <div class="ms-auto dropdown mx-4 ">
                <button class="btn btn-default dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img class="avatar" src="img/avatar/18.png" alt="Avatar">
                    <span class="caret"></span>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="self.html">Account</a>

                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#login" data-bs-toggle="modal" data-target="#login">Log In</a>
                    <a class="dropdown-item" href="register">Register</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <img class="logo center py-5" src=img/FrogCritic.png alt="FrogCritic">
        <div class="input-group search-box mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">ðŸ”Ž</span>
            </div>
            <input type="text" class="form-control" placeholder="Search for a game">
            <div class="input-group-append">
                <div class="input-group">
                    <span class="input-group-text">Order by</span>
                    <select class="form-select">
                        <option selected>Nothing</option>
                        <option value="1">Title</option>
                        <option value="2">Developer</option>
                        <option value="3">Rating</option>
                        <option value="3">Review Count</option>
                    </select>
                </div>
            </div>
        </div>
        <div id="game-entries" class="container mx-auto d-flex flex-wrap">
            {{log "# Games"}}
            {{log}}
            {{#each games}}
            {{log "*" title}}
            <div class="game index-game-entry border rounded">
                <a class="index-game-cover-container border rounded" href="reviews?title={{title}}">
                    <img class="index-game-cover d-block mx-auto my-auto" src="img/cover/{{file}}.png">
                </a>
                <div class="mx-5 my-5">
                    <h2 class="fs-4 fw-bold"><a class="block-link" href="reviews?title={{title}}">
                            {{title}}
                        </a></h2>
                    <div class="star-rating">
                        {{{generateStarRating rating}}}
                    </div>
                    <p class="fst-italic">
                        {{developer}}, {{release_date}}
                    </p>
                    <p>
                        {{{truncateWords description 20}}}
                    </p>
                    <p class="fst-italic">
                        Source:
                        <a class="block-link" href="{{source.link}}">
                            {{source.name}}
                        </a>
                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<script src="script.js"></script>

</html>